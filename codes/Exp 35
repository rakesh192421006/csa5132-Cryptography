#include <stdio.h>
#include <stdlib.h>

void otp_encrypt(char *text, int *key, int len) {
    for (int i = 0; i < len; i++)
        text[i] = ((text[i] - 'A' + key[i]) % 26) + 'A';
}

void otp_decrypt(char *text, int *key, int len) {
    for (int i = 0; i < len; i++)
        text[i] = ((text[i] - 'A' - key[i] + 26) % 26) + 'A';
}
