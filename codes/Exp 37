#include <stdio.h>
#include <string.h>

double english_freq[26] = {
8.2,1.5,2.8,4.3,12.7,2.2,2.0,6.1,
7.0,0.15,0.77,4.0,2.4,6.7,7.5,
1.9,0.095,6.0,6.3,9.1,2.8,1.0,
2.4,0.15,2.0,0.07
};

double score_text(char *text) {
    int freq[26] = {0};
    int len = strlen(text);

    for (int i = 0; i < len; i++)
        freq[text[i]-'A']++;

    double score = 0;
    for (int i = 0; i < 26; i++)
        score += freq[i] * english_freq[i];

    return score;
}
